{
  "name": "next-version",
  "version": "1.0.0",
  "main": "dist/index.js",
  "repository": "https://github.com/CodeVachon/next-version.git",
  "author": "Christopher Vachon <cvachon@fortyfournorth.ca>",
  "license": "MIT",
  "scripts": {
    "bootstrap": "./bootstrap.sh",
    "dev": "yarn bootstrap && ts-node src/index -c $(pwd)/test-repo && rm -fr test-repo",
    "start": "yarn build && node dist/index.js",
    "clean": "rm -fr dist pkg",
    "build": "tsc",
    "package": "pkg . ",
    "full": "yarn clean && yarn build && yarn package"
  },
  "pkg": {
    "scripts": "dist/**/*.js",
    "assets": [
      "node_modules/figlet/fonts/Colossal.flf",
      "lib/**/*.js"
    ],
    "targets": [
      "node16-macos-x64"
    ],
    "outputPath": "pkg"
  },
  "devDependencies": {
    "@types/figlet": "^1.5.4",
    "@types/inquirer": "^8.1.3",
    "@types/ms": "^0.7.31",
    "@types/node": "^16.11.11",
    "@types/yargs": "^17.0.7",
    "pkg": "^5.5.1",
    "prettier": "^2.5.0",
    "ts-node": "^10.4.0",
    "typescript": "^4.5.2"
  },
  "dependencies": {
    "chalk": "^4",
    "dayjs": "^1.10.7",
    "execa": "^5",
    "figlet": "^1.5.2",
    "inquirer": "^8.2.0",
    "ms": "^2.1.3",
    "yargs": "^17.3.0"
  }
}
